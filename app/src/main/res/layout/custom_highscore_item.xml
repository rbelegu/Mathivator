<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/listLayout">
            <ImageView
                android:id="@+id/imageRank"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/hashtag_transparent" />

            <TextView
                android:id="@+id/highscoreRank"
                style="@style/listItem"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout style="@style/listLayout">
            <ImageView
                android:id="@+id/imageName"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/person_transparent" />
            <TextView
                android:id="@+id/highscoreName"
                style="@style/listItem"  />
        </LinearLayout>
        <LinearLayout style="@style/listLayout">

            <ImageView
                android:id="@+id/imageStar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/star_transparent" />

            <TextView
                android:id="@+id/highscorePoints"
                style="@style/listItem"  />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout style="@style/listLayout">
            <ImageView
                android:id="@+id/imageCity"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ort_transparent" />
            <TextView
                android:id="@+id/highscoreCity"
                style="@style/listItem"  />
        </LinearLayout>
        <LinearLayout style="@style/listLayout">
            <ImageView
                android:id="@+id/imageDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/datum_transparent" />
            <TextView
                android:id="@+id/highscoreDate"
                style="@style/listItem"  />
        </LinearLayout>
        <LinearLayout style="@style/listLayout">

            <ImageView
                android:id="@+id/imageTime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/zeit_transparent" />

            <TextView
                android:id="@+id/highscoreTime"
                style="@style/listItem"  />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
