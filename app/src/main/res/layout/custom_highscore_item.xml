<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:id="@+id/highscoreDate"
        style="@style/listItem"/>
    <TextView android:id="@+id/highscoreName"
        style="@style/listItem"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/highscorePoints"
            style="@style/listItem"/>
        <TextView android:id="@+id/highscoreTime"
            style="@style/listItem"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/highscoreLat"
            style="@style/listItem"/>
        <TextView android:id="@+id/highscoreLon"
            style="@style/listItem"/>
    </LinearLayout>
</LinearLayout>